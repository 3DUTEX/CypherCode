<%- include("./includes/head") %>

    <%- include("./includes/navbar") %>

        <section class="section-perfil">
            <h1>Meu Perfil</h1>
            <% if(sucesso.length> 0 || erros.length > 0) { %>
                <%- include("./includes/messages") %>
                    <% } %>
                        <div class="perfil-dados">
                            <h2>
                                @<%= usuario.usuario %>
                            </h2>
                            <h4>Email: <%= usuario.email %>
                            </h4>
                        </div>
                        <div class="container-pedidos">
                            <h2>Meus Pedidos</h2>

                            <div class="pedidos">
                                <% if(pedidos.length> 0) { %>
                                    <% for(pedido of pedidos) { %>
                                        <div class="pedido">
                                            <div class="pedidoAtributo">
                                                <p>Nome do Projeto: </p>
                                                <h3>
                                                    <%= pedido.nomeProjeto %>
                                                </h3>
                                            </div>

                                            <div class="pedidoAtributo">
                                                <a href="/perfil/editarPedido/<%= pedido._id %>">Editar</a>
                                            </div>

                                        </div>
                                        <% } %>
                                            <% } %>
                            </div>
                        </div>
        </section>

        <%- include("./includes/footer") %>